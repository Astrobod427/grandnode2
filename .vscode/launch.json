{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Attacher au processus Grandnode",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:docker-for-debug.getProcessId}",
            "pipeTarget": {
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "grandnode"
                ],
                "pipeCwd": "${workspaceFolder}"
            },
            "sourceFileMap": {
                "/app": "${workspaceFolder}"
            },
        }
    ]
}