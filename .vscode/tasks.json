{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Docker: Démarrer GrandNode (Build & Run)",
            "type": "shell",
            "command": "docker compose -f docker-compose.dev.yml up --build",
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ".*",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Attaching to grandnode_dev",
                    "endsPattern": "dotnet watch ⏳ Waiting for a file to change before restarting"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Docker: Arrêter GrandNode",
            "type": "shell",
            "command": "docker compose -f docker-compose.dev.yml down -v",
            "group": "build"
        },
        {
            "label": "Docker: Redémarrer GrandNode",
            "type": "shell",
            "command": "docker compose -f docker-compose.dev.yml restart",
            "group": "build"
        }
    ]
}